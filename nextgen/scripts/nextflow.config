

params {
  config_profile_description = 'Configure files for for Genomic Core Facility in IZKF of RWTH Aachen University'
  config_profile_contact = 'Chao-Chung Kuo (@ckuo)'
  config_profile_url = 'https://www.medizin.rwth-aachen.de/cms/Medizin/Die-Fakultaet/Einrichtungen/IZKF-Aachen/Core-Facilities/~qehj/Genomics-Facility/'
}

cleanup = true

params {
  max_time = 14.d
  max_cpus = 80
  max_memory = 3.TB
  igenomes_base = '/iGenomes/'
  saveReference = true
}

process {
    withName: nextgen3 {
        cpus = 90
        memory = 8.GB
        queue = 'short'
    }
}
